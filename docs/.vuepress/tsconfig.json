{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2022",
      "ES2021.String"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "ES2022",
    "types": [
      "vuepress/client-types"
    ]
    // "composite": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tools/**/*.ts",
    "tsup.config.ts"
  ]
}
